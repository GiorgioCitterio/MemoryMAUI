<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_00_MemoryGiorgioCitterio.Android.ImpostazioniAndroid"
             Title="Impostazioni"   
             BackgroundColor="Black">
    <VerticalStackLayout>
        <Label
            Text="🧑‍🔧⚙️Impostazioni⚙️🧑‍🔧"
            TextColor="White"
            FontFamily="LowBudget"
            FontSize="23"
            Margin="0, 50, 0, 0"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <Button
            Text="Visualizza codice sorgente"
            Clicked="codGit"
            TextColor="White"
            BackgroundColor="Black"
            BorderWidth="1"
            FontFamily="TimesNewRoman"
            FontSize="15"
            Margin="0, 50, 0, 0"
            HorizontalOptions="Center"
            WidthRequest="250"
            HeightRequest="40"/>
        <Grid
            Margin="10, 50, 10, 0"
            ColumnDefinitions="*, *, *">
            <Label
                Text="Attiva/disattiva musica:"
                TextColor="White"
                BackgroundColor="Black"
                FontSize="14"
                FontFamily="TimesNewRoman"
                Grid.Column="0"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"/>
            <Button
                x:Name="btn_on"
                Text="On"
                BackgroundColor="LightBlue"
                TextColor="White"
                FontFamily="TimesNewRoman"
                FontSize="18"
                Grid.Column="1"
                Clicked="MusicControl"
                CornerRadius="15"
                WidthRequest="110"
                HeightRequest="50"
                HorizontalOptions="Center"/>
            <Button
                x:Name="btn_off"
                Text="Off"
                BackgroundColor="Blue"
                TextColor="White"
                FontFamily="TimesNewRoman"
                FontSize="18"
                Grid.Column="2"
                Clicked="MusicControl"
                CornerRadius="15"
                WidthRequest="110"
                HeightRequest="50"
                HorizontalOptions="Center"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>